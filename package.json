    "i18next-resources-to-backend": "^1.2.0",
    "next": "^14.0.3",
    "next-themes": "^0.2.1",
    "react": "^18",
    "react-cookie": "^6.1.1",
    "react-dom": "^18",
    "react-i18next": "^13.4.1",
    "react-icons": "^4.12.0",
    "react-query": "^3.39.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.2",
    "@commitlint/config-conventional": "^18.4.2",
